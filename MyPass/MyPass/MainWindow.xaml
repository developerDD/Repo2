<Window x:Class="MyPass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPass"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="TextBoxStyl">
            <Setter Property="Control.FontSize" Value="18"/>
            <Setter Property="Control.Background" Value="Black" />
            <Setter Property="Control.Foreground" Value="White" />
            <Setter Property="Control.FontFamily" Value="Verdana" />
        </Style>
    </Window.Resources>
    <Grid>

        <StackPanel HorizontalAlignment="Center" Height="81" Margin="70,50,66,0" VerticalAlignment="Top" Width="700"
                    Orientation="Horizontal">
            <TextBox TextAlignment="Center" Height="30" Width="190" TextWrapping="Wrap" Text="NameSource" Margin="10 0 0 0" Style="{StaticResource TextBoxStyl}"/>
            <TextBox TextAlignment="Center" Height="30" Width="190" TextWrapping="Wrap" Text="Login" Margin="30 0 0 0" Style="{StaticResource TextBoxStyl}"/>
            <TextBox TextAlignment="Center" Height="30" Width="190" TextWrapping="Wrap" Text="Password" Margin="30 0 0 0" Style="{StaticResource TextBoxStyl}"/>
        </StackPanel>


        <StackPanel HorizontalAlignment="Center" Height="81" Margin="136,150,66,0" VerticalAlignment="Top" Width="590"
                    Orientation="Horizontal">
            <TextBox Height="23" Width="120" TextWrapping="Wrap" Text="TextBox" Margin="10 0 0 0"/>
            <TextBox Height="23" Width="120" TextWrapping="Wrap" Text="TextBox" Margin="30 0 0 0"/>
            <PasswordBox Height="23" Width="120" Margin="30 0 0 0"/>
            <Button Content="Button" HorizontalAlignment="Right" Margin="30,0,0,0" VerticalAlignment="Center" Width="93" Click="Button_Click" Height="45" RenderTransformOrigin="0.532,0.22"/>
        </StackPanel>


    </Grid>
</Window>
